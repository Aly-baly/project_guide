<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_acc"
    android:padding="30dp"
    tools:context=".ui.profile.PersonalAccount">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="303dp"
        android:layout_height="399dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/emailAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Hello user"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnLog"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailAcc"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/btnReg"
        android:text="Login"
        app:icon="@drawable/ic_baseline_login_24" />

    <Button
        android:id="@+id/btnReg"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailAcc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="31dp"
        android:text="Register"
        app:icon="@drawable/ic_baseline_how_to_reg_24" />

</RelativeLayout>
